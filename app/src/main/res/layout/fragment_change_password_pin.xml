<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".ui.changePasswordPin.ChangePasswordPinFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_back"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:id="@+id/tv_title"
            android:textColor="@color/primaryColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Sub title"
            android:textColor="@color/grey"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/et_old_password_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter old password/pin"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_new_password_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter new password/pin"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_confirm_password_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Confirm new password/pin"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_proceed"
            android:layout_margin="40dp"
            android:textColor="@color/white"
            android:text="Proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>





</LinearLayout>